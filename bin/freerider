#!/usr/bin/env ruby

require 'freerider'
require 'formatter'

key = ARGV[0]

if !key
  puts 'You must supply a customer_key' if !key
  exit
end

vehicles = Freerider.new(key.chomp).get_low_fuel_vehicles
vehicles.each { |vehicle| 
  puts '=============================================================='
  puts Formatter.format_vehicle(vehicle.to_json)
}
puts '=========================='
vehicles.size.times { print 'C'}
puts "\n=========================="
